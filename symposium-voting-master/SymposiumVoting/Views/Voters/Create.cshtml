@model SymposiumVoting.Models.Voter

@{
    ViewBag.Title = "Create";
}
<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Voter</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.voting_id, "First Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.voting_id)
                @Html.ValidationMessageFor(model => model.voting_id)
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10 hidden">
                @Html.EditorFor(model => model.symposiumID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
    
}

<div>
    @Html.ActionLink("Back to Symposium", "Details", "Symposiums", new { id = Model.symposiumID }, new { })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
